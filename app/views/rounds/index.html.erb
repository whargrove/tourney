<p id="notice"><%= notice %></p>

<h1>Listing Rounds for <%= @tournament.name %></h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      <tr>
        <td><%= link_to round.number, round_path(round, tournament_id: @tournament.id) %></td>
        <td><%= link_to 'Edit', edit_round_path(round, tournament_id: @tournament.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Round', new_round_path(tournament_id: @tournament.id) %>
